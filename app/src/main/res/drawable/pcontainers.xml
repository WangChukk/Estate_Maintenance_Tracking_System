<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with rounded corners -->
    <item>
        <shape>
            <solid android:color="#093153" /> <!-- Background color, change to your desired color -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>

    <!-- Box shadow -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#3788CD" /> <!-- Shadow color, change to your desired shadow color -->
        </shape>
    </item>
</layer-list>
