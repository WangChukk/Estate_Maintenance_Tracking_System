<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PresedentHomeFragment">

    <LinearLayout
        android:id="@+id/curved_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_container"
        android:backgroundTint="#d9dae0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="My Dash Board"
            android:textColor="@color/black"
            android:textSize="22dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

        <Button
            android:id="@+id/preValidatebtn"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_buttonhome"
            android:drawableLeft="@drawable/check_box_24"
            android:text="Validate" />

        <Button
            android:id="@+id/preRecordbtn"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_buttonhome"
            android:drawableLeft="@drawable/records_24"
            android:text="Records" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>