<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EM_HomeFragment">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="My Dash Board"
        android:gravity="center"
        android:fontFamily="cursive"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:id="@+id/curved_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_container"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/emPendingbtn"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="10dp"
                    android:backgroundTint="#02355E"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/clock_24"
                    android:text="Pending" />

                <Button
                    android:id="@+id/emRecords"
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:layout_columnWeight="1"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:backgroundTint="#02355E"
                    android:drawableLeft="@drawable/records_24"
                    android:text="Records" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>